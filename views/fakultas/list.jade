extends ../layout/base 
block content 
	section.content-header 
		img(src='/images/Logo_UGM.png',alt='User Image' style='width:50%;display: block;margin-left: auto;margin-right: auto;').img-align-center
		
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| FAKULTAS
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
			.box-body
				- if(messages.msg_info)
					.alert.alert-success.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-check
							| Success!
						| !{messages.msg_info}
				- if(messages.msg_error)
					.alert.alert-danger.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-ban
							| Alert!
						| !{messages.msg_error}
				a(href='fakultas/add').pull-left.btn.btn-primary
					i.fa.fa-plus 
					|  Tambah Fakultas
				.data-table(style='background-image: url("https://i.pinimg.com/originals/7e/1b/3f/7e1b3f93d169a3d8f2937b548d86d1de.jpg");background-repeat: no-repeat;background-size: cover;')
					table.table.table-bordered
						tr
							th
								| No
							th
								| Nama Fakultas
							th
								| Letak Fakultas
							th
								| No Fakultas
							th
								| Email Fakultas
							th
								| Action
							if messages.msg_error
								| !{messages.msg_error}
							else
								for row, index in data 
									tr
										td #{index+1}
										td #{row.nama_fakultas}
										td #{row.letak_fakultas}
										td #{row.no_fakultas}
										td #{row.email_fakultas}
										td
											div(style='display:inline-block')
												a(href='/fakultas/edit/#{row.id}').btn.btn-sm.btn-primary.text="Edit"
														
											| 
											div(style='display:inline-block')
												form(method='post', action='/fakultas/delete/#{row.id}')
													input(type="hidden",name="_method", value="DELETE")
													button.btn.btn-sm.btn-danger(type='submit').text='Hapus'

														