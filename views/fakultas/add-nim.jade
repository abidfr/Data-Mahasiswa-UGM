extends ../layout/base
block content
    section.content-header
        h1
            | Tambah NIM
            small universitas gadjah mada
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | NIM
                li.active Tambah NIM
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | NIM
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/nim/add' enctype='multipart/form-data')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama Mahasiswa
                                    input(type='text',value='#{name}',name='nama_mahasiswa',placeholder='Masukkan Nama Mahasiswa', autofocus).form-control
                                .form-group
                                    label
                                        | Jenis Kelamin
                                    input(type='text',name='jenis_kelamin',placeholder='Masukkan Jenis Kelamin').form-control
                                .form-group
                                    label
                                        | Jenjang Mahasiswa
                                    input(type='text',name='jenjang_mahasiswa',placeholder='Masukkan Jenjang Mahasiswa').form-control
                                .form-group
                                    label
                                        | Program Studi
                                    input(type='text',name='program_studi',placeholder='Masukkan Program Studi').form-control
                                .form-group
                                    label
                                        | Gambar
                                    input(type='file',name='gambar',placeholder='Masukkan Gambar').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Simpan

                                a(href='/nim').btn.btn-primary.pull-right
                                    | Silahkan Kembali